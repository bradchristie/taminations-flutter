      <move select="Lead Left" beats="2.5" scaleX="2" />
      <move select="Run Left" beats="4" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" />
      <move select="Run Left" beats="4" hands="nohands" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" scaleY=".75" />
    </path>
  </tam>

