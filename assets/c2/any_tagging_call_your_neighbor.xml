  <tam title="Flip Your Cross Neighbor" group=" "
       from="Right-Hand Wave"
       formation="Wave RH"
       parts="5.5">
    <path>
      <move select="Lead Right" />
      <move select="Forward 4" />
      <move select="Lead Right" beats="2.5" scaleX="2" />
