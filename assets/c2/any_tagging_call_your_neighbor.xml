      <move select="Lead Right" scaleY=".5" beats="2"/>
      <move select="Forward" beats="2"/>
      <move select="Lead Right" beats="2.5" scaleX="1.5" />
      <move select="U-Turn Right" beats="4"  />
    </path>
    <path>
      <move select="Lead Right" scaleY=".5"/>
      <move select="Run Right" beats="4" scaleX=".5"/>
      <move select="Extend Right" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
