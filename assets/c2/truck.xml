<tamination title="Truck">

  <tam title="Truck" from="Columns" sequencer="gender-specific" formation="Column RH GBGB">
    <path>
      <move select="Dodge Right" hands="right"/>
    </path>
    <path>
      <move select="Dodge Left" hands="right"/>
    </path>
    <path>
      <move select="Dodge Right" hands="right"/>
    </path>
    <path>
      <move select="Dodge Left" hands="right"/>
    </path>
  </tam>

  <tam title="Truck" from="Waves" sequencer="gender-specific" formation="Ocean Waves RH BGBG">
	<path>
      <move select="Dodge Left" hands="right"/>
	</path>
	<path>
      <move select="Dodge Right" hands="both"/>
	</path>
	<path>
      <move select="Dodge Left" hands="both"/>
	</path>
	<path>
      <move select="Dodge Right" hands="right"/>
	</path>
  </tam>

</tamination>
