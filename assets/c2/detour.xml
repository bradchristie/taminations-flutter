<tamination title="Detour">

  <tam title="Detour"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB">
    <path couples="4 2">
      <move select="Forward 2" />
      <move select="Quarter Left" hands="left" offsetX="1" />
    </path>
    <path couples="4 2">
      <move select="Counter Rotate Left 0 2" beats="3.5" hands="left" offsetX="-1"/>
    </path>
    <path couples="3 1">
      <move select="Counter Rotate Left 2 0" beats="3.5" hands="left" offsetX="1"/>
    </path>
    <path couples="3 1">
      <move select="Run Left" beats="2" offsetX="-2" offsetY="-1" />
      <move select="Hinge Left" />
    </path>
  </tam>

  <tam title="Detour"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path numbers="1 8">
      <move select="Forward 2" />
      <move select="Quarter Left" hands="left" offsetX="1" />
    </path>
    <path numbers="2 7">
      <move select="Counter Rotate Right 2 0" beats="3.5" hands="right" offsetX="1"/>
    </path>
    <path numbers="3 6">
      <move select="Counter Rotate Right 0 -2" beats="3.5" hands="right" offsetX="-1"/>
    </path>
    <path numbers="4 5">
      <move select="Run Left" beats="2" offsetX="-2" offsetY="-1" />
      <move select="Hinge Left" />
    </path>
  </tam>

  <tam title="Detour"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB">
    <path>
      <move select="Run Right" beats="2" offsetX="-2" offsetY="1" />
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" beats="3.5" hands="right" offsetX="1"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" beats="3.5" hands="right" offsetX="-1"/>
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Quarter Right" hands="right" offsetX="1" />
    </path>
  </tam>

  <tam title="Detour"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH">
    <path>
      <move select="Run Right" beats="2" offsetX="-2" offsetY="1" />
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="Counter Rotate Left 0 2" beats="3.5" hands="left" offsetX="-1"/>
    </path>
    <path>
      <move select="Counter Rotate Left 2 0" beats="3.5" hands="left" offsetX="1"/>
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Quarter Right" hands="right" offsetX="1" />
    </path>
  </tam>

  <tam title="Detour"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points">
    <path>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Hinge Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Left" beats="3" scaleX="0.75"/>
    </path>
    <path>
      <move select="Run Left" scaleY=".5" offsetX="-2"/>
      <move select="Hinge Left" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Detour"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points">
    <path>
      <move select="Lead Left" beats="3" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Run Right" scaleY=".5" offsetX="-2"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="3" scaleX="0.75"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Detour"
       from="T-Bones 1"
       formation="T-Bone URRD">
    <path>
      <move select="Forward" beats="3"/>
      <move select="Hinge Left" offsetY="-1"/>
    </path>
    <path>
      <move select="Counter Rotate Left 2 0" beats="3" hands="left"/>
    </path>
    <path>
      <move select="Counter Rotate Left 0 2" beats="3" hands="left"/>
    </path>
    <path>
      <move select="Run Left" scaleY=".5" offsetX="-1"/>
      <move select="Hinge Left"/>
    </path>
  </tam>

  <tam title="Detour"
       from="T-Bones 2"
       formation="T-Bone DRRU">
    <path>
      <move select="Run Right" scaleY=".5" offsetX="-1"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Counter Rotate Left 2 0" beats="3" hands="left"/>
    </path>
    <path>
      <move select="Counter Rotate Left 0 2" beats="3" hands="left"/>
    </path>
    <path>
      <move select="Forward" beats="3"/>
      <move select="Hinge Right" offsetY="1"/>
    </path>
  </tam>

</tamination>
