<tamination title="Swap the Wave">

  <tam title="Swap the Wave"
       from="Right-Hand Wave"
       formation="Wave RH">
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="3" />
      <move select="Lead Right" beats="2" scaleY="2.5" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
  </tam>

  <tam title="Swap the Wave"
       from="Left-Hand Wave">
  <formation>
    <dancer gender="girl" x="0" y="3" angle="180"/>
    <dancer gender="boy" x="0" y="1" angle="0"/>
  </formation>
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Forward 2" />
    </path>
  </tam>

  <tam title="Swap the Wave"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="3" />
      <move select="Lead Right" beats="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="3" />
      <move select="Lead Right" beats="2" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Swap the Wave"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB">
    <path>
      <move select="Extend Left" beats="4" scaleY="2" />
    </path>
    <path>
      <move select="Swing Right" scaleY=".75" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Right" scaleY=".75" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleY="2" />
    </path>
  </tam>

  <tam title="Swap the Wave"
       from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB">
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="1.5" />
      <move select="Lead Right" beats="2" scaleY="2.5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="1.5" />
      <move select="Lead Right" beats="2" scaleY="2.5" />
    </path>
  </tam>

  <tam title="Swap the Wave"
       from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB">
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY=".5" />
    </path>
  </tam>

</tamination>
