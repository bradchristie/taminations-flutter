<tamination title="Exchange the Diamond">

  <tam title="Exchange the Diamond"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points"
       parts="3;3;3" >
    <path numbers="6 3">
      <move select="Lead Right" beats="3" scaleX="2" />
      <move select="Lead Right" beats="3" scaleY="2" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3" />
      <move select="Lead Left" beats="3" scaleY="3" />
    </path>
    <path numbers="2 7">
      <move select="Lead Right" beats="3" scaleY="3" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3" />
      <move select="Lead Left" beats="3" scaleY="3" />
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path numbers="5 4">
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3" />
      <move select="Lead Left" beats="3" scaleY="3" />
      <move select="Lead Left" beats="3" scaleX="3" />
      <move select="Lead Left" beats="3" scaleY="3" />
    </path>
    <path numbers="8 1">
      <move select="Lead Right" beats="3" scaleY="3" />
      <move select="Lead Right" beats="3" scaleX="2" />
      <move select="Lead Right" beats="3" scaleY="2" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3" />
    </path>
  </tam>

  <tam title="Exchange the Diamond"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points"
       parts="3;3;3" >
    <path>
      <move select="Lead Left" beats="3" scaleX="2" />
      <move select="Lead Left" beats="3" scaleY="2" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
      <move select="Lead Right" beats="3" scaleY="3" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="3" />
      <move select="Lead Left" beats="3" scaleX="2" />
      <move select="Lead Left" beats="3" scaleY="2" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
      <move select="Lead Right" beats="3" scaleY="3" />
      <move select="Lead Right" beats="3" scaleX="3" />
      <move select="Lead Right" beats="3" scaleY="3" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="3" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
      <move select="Lead Right" beats="3" scaleY="3" />
      <move select="Lead Right" beats="3" scaleX="3" />
    </path>
  </tam>

  <tam title="Exchange the Diamond"
       from="Facing Diamonds, Right-Hand Centers"
       formation="Diamonds Facing Girl Points"
       parts="3;3;3">
    <path>
      <move select="Lead Right" beats="3" scaleX="2"/>
      <move select="Lead Right" beats="3" scaleY="2"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3"/>
      <move select="Quarter Left" beats="1" offsetY="1"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
    </path>
    <path>
      <move select="Quarter Left" beats="1" offsetY="1"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Lead Left" beats="3" scaleX="2"/>
      <move select="Lead Left" beats="3" scaleY="2"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3"/>
      <move select="Lead Left" beats="3" scaleY="3"/>
      <move select="Extend Left" beats="2" scaleX="2"/>
      <move select="Quarter Left" beats="1" offsetX="1"/>
      <move select="Lead Left" beats="3" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleX="3"/>
    </path>
  </tam>

  <tam title="Exchange the Diamond"
       from="Facing Diamonds, Left-Hand Centers"
       formation="Diamonds Facing LH Girl Points"
       parts="3;3;3">
    <path>
      <move select="Extend Left" beats="1.5"/>
      <move select="Quarter Left" beats="1.5" offsetX="1"/>
      <move select="Lead Left" beats="3" scaleY="2"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleY="3"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3"/>
      <move select="Quarter Left" beats="1" offsetY="1"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Extend Left" beats="2" scaleX="2"/>
      <move select="Quarter Left" beats="1" offsetX="1"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleX="3"/>
      <move select="Lead Right" beats="3" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleX="2"/>
      <move select="Lead Right" beats="3" scaleY="2"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3"/>
    </path>
  </tam>

  <tam title="Exchange the Diamond"
       from="Right-Hand Point-to-Point Diamonds"
       formation="Diamonds RH PTP Girl Points"
       parts="3;3;3">
    <path>
      <move select="Lead Right" beats="3" scaleX="2"/>
      <move select="Lead Left" beats="3" scaleX="2" scaleY="4"/>
      <move select="Lead Left" beats="3" scaleX="2" scaleY="2"/>
      <move select="Lead Left" beats="3" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="2" scaleY="4"/>
      <move select="Lead Left" beats="3" scaleX="2" scaleY="2"/>
      <move select="Lead Left" beats="3" scaleY="2"/>
