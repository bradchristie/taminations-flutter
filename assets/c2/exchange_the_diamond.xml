    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="2"/>
      <move select="Lead Left" beats="3" scaleX="2"/>
      <move select="Lead Right" beats="3" scaleY="4"/>
      <move select="Lead Right" beats="3" scaleX="2"/>
    </path>
  </tam>

  <tam title="Exchange the Diamond"
       from="Facing Point-to-Point Diamonds, Right-Hand Centers"
       formation="Diamonds Facing PTP">
    <path>
      <move select="Lead Right" beats="3" scaleX="2"/>
      <move select="Lead Left" beats="3" scaleX="2" scaleY="4"/>
      <move select="Lead Left" beats="1.5"/>
      <move select="Extend Right" beats="1.5"/>
      <move select="Quarter Left" beats="1" offsetY="1"/>
      <move select="Extend Right" beats="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="4"/>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="2"/>
      <move select="Forward"/>
      <move select="Quarter Right" beats="2" offsetY="-2"/>
      <move select="Lead Right" beats="3" scaleX="2"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Lead Right" beats="2"/>
      <move select="Lead Right" beats="3" scaleY="2"/>
      <move select="Lead Right" beats="3" scaleX="2"/>
