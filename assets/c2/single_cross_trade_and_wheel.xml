<tamination title="Single Cross Trade and Wheel">

	<tam title="Single Cross Trade and Wheel"
			 from="Right-Hand Box"
			 formation="Box RH" parts="1.5;3">
		<path>
			<move select="Hinge Right"/>
			<move select="Swing Left"/>
			<move select="Forward 2"/>
		</path>
		<path>
			<move select="Hinge Right"/>
			<move select="Stand" beats="3"/>
			<move select="Run Right" beats="5" offsetX="2"/>
		</path>
	</tam>

	<tam title="Single Cross Trade and Wheel"
			 from="Left-Hand Box"
			 formation="Box LH" parts="1.5;3">
		<path>
			<move select="Hinge Left"/>
			<move select="Stand" beats="3"/>
			<move select="Run Left" beats="5" offsetX="2"/>
		</path>
		<path>
			<move select="Hinge Left"/>
			<move select="Swing Right"/>
			<move select="Forward 2"/>
		</path>
	</tam>

	<tam title="Single Cross Trade and Wheel"
			 from="Facing Couples"
			 formation="Facing Couples" parts="1.5;3">
		<path>
			<move select="Lead Right"/>
			<move select="Swing Left"/>
			<move select="Forward 2"/>
		</path>
		<path>
			<move select="Quarter Left" offsetX="-1" offsetY="1"/>
			<move select="Stand" beats="3"/>
			<move select="Run Right" beats="5" offsetX="2"/>
		</path>
	</tam>

	<tam title="Single Cross Trade and Wheel"
			 from="Couples Facing Out"
			 formation="Couples Facing Out" parts="1.5;3">
		<path>
			<move select="Quarter Left" offsetX="-1" offsetY="1"/>
			<move select="Swing Left"/>
			<move select="Forward 2"/>
		</path>
		<path>
			<move select="Lead Right"/>
			<move select="Stand" beats="3"/>
			<move select="Run Right" beats="5" offsetX="2"/>
		</path>
	</tam>

	<tam title="Single Cross Trade and Wheel" from="Right-Hand Waves"
			 formation="Ocean Waves RH BGGB" parts="1.5;3">
		<path>
			<move select="Hinge Right"/>
			<move select="Swing Left"/>
			<move select="Forward"/>
		</path>
		<path>
			<move select="Hinge Right"/>
			<move select="Stand" beats="3"/>
			<move select="Run Right" beats="5" offsetX="1"/>
		</path>
		<path>
			<move select="Hinge Right"/>
			<move select="Swing Left"/>
			<move select="Forward"/>
		</path>
		<path>
			<move select="Hinge Right"/>
			<move select="Stand" beats="3"/>
			<move select="Run Right" beats="5" offsetX="1"/>
		</path>
	</tam>

	<tam title="Single Cross Trade and Wheel" from="Left-Hand Waves"
			 formation="Ocean Waves LH BGGB" parts="1.5;3">
		<path>
			<move select="Hinge Left"/>
			<move select="Stand" beats="3"/>
			<move select="Run Left" beats="5" offsetX="1"/>
		</path>
		<path>
			<move select="Hinge Left"/>
			<move select="Swing Right"/>
			<move select="Forward"/>
		</path>
		<path>
			<move select="Hinge Left"/>
			<move select="Stand" beats="3"/>
			<move select="Run Left" beats="5" offsetX="1"/>
		</path>
		<path>
			<move select="Hinge Left"/>
			<move select="Swing Right"/>
			<move select="Forward"/>
		</path>
	</tam>

	<tam title="Single Cross Trade and Wheel" from="Right-Hand Columns"
			 formation="Column RH GBGB" parts="1.5;3">
		<path>
			<move select="Hinge Right" scaleX=".5"/>
			<move select="Stand" beats="3"/>
			<move select="Run Right" beats="5" offsetX="2" scaleY=".25"/>
		</path>
		<path>
			<move select="Hinge Right" scaleX=".5"/>
			<move select="Swing Left" scaleX=".5" scaleY=".5"/>
			<move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
		</path>
		<path>
			<move select="Hinge Right" scaleX=".5"/>
			<move select="Stand" beats="3"/>
			<move select="Run Right" beats="5" offsetX="2" scaleY=".25"/>
		</path>
		<path>
			<move select="Hinge Right" scaleX=".5"/>
			<move select="Swing Left" scaleX=".5" scaleY=".5"/>
			<move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
		</path>
	</tam>

	<tam title="Single Cross Trade and Wheel" from="Left-Hand Columns"
			 formation="Column LH GBGB" parts="1.5;3">
		<path>
			<move select="Hinge Left" scaleX=".5"/>
			<move select="Swing Right" scaleX=".5" scaleY=".5"/>
			<move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
		</path>
		<path>
			<move select="Hinge Left" scaleX=".5"/>
			<move select="Stand" beats="3"/>
			<move select="Run Left" beats="5" offsetX="2" scaleY=".25"/>
		</path>
		<path>
			<move select="Hinge Left" scaleX=".5"/>
			<move select="Swing Right" scaleX=".5" scaleY=".5"/>
			<move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
		</path>
		<path>
			<move select="Hinge Left" scaleX=".5"/>
			<move select="Stand" beats="3"/>
			<move select="Run Left" beats="5" offsetX="2" scaleY=".25"/>
		</path>
	</tam>

</tamination>
