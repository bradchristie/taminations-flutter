<tamination title="Stack the Line">

  <tam title="Stack the Line"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path numbers="1 8">
      <move select="Quarter Right" beats="3" offsetX="3" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Left" beats="3" offsetX="1" />
    </path>
    <path numbers="5 4">
      <move select="Quarter Left" beats="3" offsetX="-3" offsetY="2" />
    </path>
    <path numbers="6 3">
      <move select="Quarter Right" beats="3" offsetX="-1" offsetY="-2" />
    </path>
  </tam>

  <tam title="Stack the Line"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH">
    <path>
      <move select="Quarter Left" beats="3" offsetX="-3" offsetY="2" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetX="-1" offsetY="-2" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetX="3" />
    </path>
    <path>
      <move select="Quarter Left" beats="3" offsetX="1" />
    </path>
  </tam>

  <tam title="Stack the Line"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Quarter Right" beats="3" offsetX="3" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetX="-1" offsetY="-2" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetX="3" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetX="-1" offsetY="-2" />
    </path>
  </tam>

  <tam title="Stack the Line"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG">
    <path>
      <move select="Quarter Left" beats="2" offsetX="-2" />
      <move select="Extend Left" beats="2" scaleX="2" />
    </path>
    <path>
      <move select="Quarter Left" beats="4" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="-2" />
      <move select="Extend Left" beats="2" scaleX="2" />
    </path>
    <path>
      <move select="Quarter Left" beats="4" offsetX="1" />
    </path>
  </tam>

  <tam title="Stack the Line"
       from="Double Pass Thru"
       formation="Double Pass Thru">
    <path>
      <move select="Quarter Right" beats="3" offsetX="2" offsetY=".5"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3" offsetY="-.5"/>
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetY="-2.5"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3" offsetX="-2" offsetY="2.5"/>
    </path>
  </tam>

  <tam title="Stack the Line"
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru">
    <path>
      <move select="Quarter Left" beats="3" offsetX="-2" offsetY="2.5"/>
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetY="-2.5"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3" offsetY="-.5"/>
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetX="2" offsetY=".5"/>
    </path>
  </tam>

  <tam title="Stack the Line"
       from="Right-Hand Columns"
       formation="Column RH GBGB">
    <path>
      <move select="Quarter Right" beats="3" offsetY="-2.5"/>
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetX="2" offsetY=".5"/>
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetY="-2.5"/>
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetX="2" offsetY=".5"/>
    </path>
  </tam>

  <tam title="Stack the Line"
       from="Left-Hand Columns"
       formation="Column LH GBGB">
    <path>
      <move select="Quarter Left" beats="3" offsetY="-.5"/>
    </path>
    <path>
      <move select="Quarter Left" beats="1" offsetX="-1"/>
      <move select="Extend Left" beats="2" scaleX="2.5"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3" offsetY="-.5"/>
    </path>
    <path>
      <move select="Quarter Left" beats="1" offsetX="-1"/>
      <move select="Extend Left" beats="2" scaleX="2.5"/>
    </path>
  </tam>

</tamination>
