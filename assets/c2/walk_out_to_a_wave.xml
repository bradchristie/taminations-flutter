<tamination title="Walk Out to a Wave">

  <tam title="Walk Out to a Wave" from="Right-Hand Columns" formation="Column RH GBGB">
    <path couples="4 2">
      <move select="Run Right" beats="5" scaleY="2" offsetX="-1"/>
      <move select="Run Right"/>
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="5" offsetX="1"/>
      <move select="Dodge Left"/>
    </path>
    <path couples="1 3">
      <move select="Forward 2" beats="3"/>
      <move select="U-Turn Right" beats="2" offsetX="1"/>
    </path>
    <path couples="1 3">
      <move select="Forward 3" beats="5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Walk Out to a Wave" from="Left-Hand Columns" formation="Column LH GBGB">
    <path>
      <move select="Forward 3" beats="5"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="U-Turn Left" beats="2" offsetX="1"/>
    </path>
    <path>
      <move select="Run Left" beats="5" offsetX="1"/>
      <move select="Dodge Right"/>
    </path>
    <path>
      <move select="Run Left" beats="5" scaleY="2" offsetX="-1"/>
      <move select="Run Left"/>
    </path>
  </tam>

  <tam title="Walk Out to a Wave" from="Double Pass Thru" formation="Double Pass Thru">
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Forward 2"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Forward 2"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Forward"/>
      <move select="U-Turn Right" beats="2" offsetX="1" offsetY="-.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Forward"/>
      <move select="U-Turn Left" beats="2" offsetX="1" offsetY="-.5"/>
    </path>
  </tam>

  <tam title="Walk Out to a Wave" from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru">
    <path>
      <move select="Run Left" beats="5" scaleX="2" scaleY="2" offsetX="-1"/>
      <move select="Run Left"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleY="2" offsetX="-1"/>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Run Left" beats="5" offsetX="1"/>
      <move select="Dodge Right"/>
    </path>
    <path>
      <move select="Flip Right" beats="5" offsetX="1"/>
      <move select="Dodge Left"/>
    </path>
  </tam>

  <tam title="Magic Walk Out to a Wave" from="Magic Columns, Right-Hand Centers"
       formation="Magic Column RH">
    <path>
      <move select="Forward" beats="2"/>
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Forward"/>
      <move select="Extend Right" beats="4" scaleX="2" scaleY="4"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2"/>
      <move select="Run Left"/>
      <move select="Dodge Right"/>
    </path>
    <path>
      <move select="Forward 2" beats="4"/>
      <move select="U-Turn Right" beats="4" offsetX="1" offsetY="-2"/>
    </path>
    <path>
      <move select="Run Left" beats="5" scaleY="2" offsetX="-1"/>
      <move select="Run Left"/>
    </path>
  </tam>

  <tam title="Magic Walk Out to a Wave" from="Magic Columns, Left-Hand Centers"
       formation="Magic Column LH">
    <path>
      <move select="Run Right" beats="5" scaleY="2" offsetX="-1"/>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Forward 2" beats="4"/>
      <move select="U-Turn Left" beats="4" offsetX="1" offsetY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Run Right"/>
      <move select="Dodge Left"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Extend Right" beats="2" scaleY="2"/>
      <move select="Forward"/>
      <move select="Extend Left" beats="4" scaleX="2" scaleY="4"/>
    </path>
  </tam>

</tamination>
