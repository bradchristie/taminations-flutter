<tamination title="Swing and Circle">

  <tam title="Swing and Circle 1/4"
       from="Right-Hand Quarter Tag"
       formation="Quarter Tag">
    <path numbers="1 8" couples="2 4">
      <move select="Stand" beats="3" hands="right" />
      <move select="Extend Left" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path numbers="2 7" couples="2 4">
      <move select="Stand" beats="3" hands="left" />
      <move select="Dodge Left" beats="4" />
    </path>
    <path numbers="6 3" couples="3 1">
      <move select="Swing Right" />
      <move select="Swing Left" beats="4" />
    </path>
    <path numbers="5 4" couples="3 1">
      <move select="Swing Right" />
      <move select="U-Turn Right" beats="4" offsetX="3" offsetY="-2" />
    </path>
  </tam>

