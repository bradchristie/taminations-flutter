<tamination title="Swing the Fractions">

  <tam title="Swing the Fractions"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="1.5;3;4.5;3" >
    <path numbers="1 8" couples="2 4">
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Hinge Right" />
    </path>
    <path numbers="2 7" couples="2 4">
      <move select="Hinge Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Hinge Right" />
    </path>
    <path numbers="3 6" couples="3 1">
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Stand" beats="3" />
      <move select="Hinge Right" />
    </path>
    <path numbers="4 5" couples="3 1">
      <move select="Hinge Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
      <move select="Stand" beats="3" />
      <move select="Hinge Right" />
    </path>
  </tam>

  <tam title="Swing the Fractions"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="1.5;3;4.5;3" >
    <path numbers="1 8">
      <move select="Stand" beats="9" />
      <move select="Swing Left" />
      <move select="Hinge Right" />
    </path>
    <path numbers="2 7">
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Stand" beats="1.5" />
    </path>
    <path numbers="3 6">
      <move select="Hinge Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Stand" beats="1.5" />
    </path>
    <path numbers="4 5">
      <move select="Stand" beats="9" />
      <move select="Swing Left" />
      <move select="Hinge Right" />
    </path>
  </tam>

  <tam title="Swing the Fractions"
       from="Facing Diamonds"
       parts="1.5;3;4.5;3" >
    <formation>
      <dancer gender="boy" y="0" x="-3" angle="90"/>
      <dancer gender="girl" y="3" x="-2" angle="180"/>
      <dancer gender="boy" y="0" x="-1" angle="270"/>
      <dancer gender="girl" y="-3" x="-2" angle="0"/>
    </formation>
    <path couples="3 1">
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Stand" beats="9" />
    </path>
    <path couples="3 1">
      <move select="Stand" beats="1.5" />
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Stand" beats="3" />
      <move select="Hinge Right" />
    </path>
    <path couples="4 2">
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Stand" beats="9" />
    </path>
    <path couples="4 2">
      <move select="Stand" beats="1.5" />
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Hinge Right" />
    </path>
  </tam>

  <tam title="Left Swing the Fractions"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="1.5;3;4.5;3" >
    <path>
      <move select="Stand" beats="9" />
      <move select="Swing Right" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Stand" beats="1.5" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Stand" beats="1.5" />
    </path>
    <path>
      <move select="Stand" beats="9" />
      <move select="Swing Right" />
      <move select="Hinge Left" />
    </path>
  </tam>

  <tam title="Left Swing the Fractions"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="1.5;3;4.5;3" >
    <path>
      <move select="Hinge Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Hinge Left" />
    </path>
  </tam>

  <tam title="Left Swing the Fractions"
       from="Facing Diamonds"
       parts="1.5;3;4.5;3" >
    <formation>
      <dancer gender="boy" y="0" x="-3" angle="270"/>
      <dancer gender="girl" y="3" x="-2" angle="0"/>
      <dancer gender="boy" y="0" x="-1" angle="90"/>
      <dancer gender="girl" y="-3" x="-2" angle="180"/>
    </formation>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
      <move select="Stand" beats="9" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
      <move select="Stand" beats="9" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Hinge Left" />
    </path>
  </tam>

  <tam title="Any Hand Swing the Fractions" parts="1.5;3;4.5;3"
       from="Inverted Line Ends Facing In" group=" ">
    <formation>
      <dancer gender="boy" x="3" y="2" angle="270"/>
      <dancer gender="girl" x="1" y="2" angle="90"/>
      <dancer gender="boy" x="-1" y="2" angle="90"/>
      <dancer gender="girl" x="-3" y="2" angle="270"/>
    </formation>
    <path>
      <move select="Hinge Right"/>
      <move select="Flip Left"/>
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX=".33" offsetY=".33" />
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX="-.33" offsetY=".33" />
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX="-.33" offsetY="-.33" />
      <move select="Flip Left"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Hinge Right"/>
      <move select="Stand" beats="3"/>
      <move select="Quarter Left" hands="right" offsetX=".33" offsetY="-.33" />
      <move select="Quarter Left" hands="right" offsetX="-.33" offsetY="-.33" />
      <move select="Quarter Left" hands="right" offsetX="-.33" offsetY=".33" />
      <move select="Stand" beats="3"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Stand" beats="3"/>
      <move select="Quarter Right" hands="left" offsetX=".33" offsetY=".33" />
      <move select="Quarter Right" hands="left" offsetX="-.33" offsetY=".33" />
      <move select="Quarter Right" hands="left" offsetX="-.33" offsetY="-.33" />
      <move select="Stand" beats="3"/>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Run Right"/>
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX=".33" offsetY="-.33" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY="-.33" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY=".33" />
      <move select="Run Right"/>
      <move select="Hinge Left"/>
    </path>
  </tam>

  <tam title="Any Hand Swing the Fractions" parts="1.5;3;4.5;3"
       from="Inverted Line Ends Facing Out"
        formation="Inverted Lines Ends Facing Out" display="none">
    <path>
      <move select="Hinge Left"/>
      <move select="Stand" beats="3"/>
      <move select="Quarter Right" hands="left" offsetY=".5" />
      <move select="Quarter Right" hands="left" offsetX="-.5" offsetY=".5" />
      <move select="Quarter Right" hands="left" offsetX="-.5"/>
      <move select="Run Right"/>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Run Right"/>
      <move select="Hinge Left" scaleY="1.5"/>
      <move select="Hinge Left" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Left" scaleX="1.5"/>
      <move select="Stand" beats="3"/>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Hinge Right"/>
      <move select="Flip Left"/>
      <move select="Hinge Right" scaleY="1.5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" scaleX="1.5"/>
      <move select="Stand" beats="3"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Hinge Right"/>
      <move select="Stand" beats="3"/>
      <move select="Quarter Left" hands="right" offsetY="-.5"/>
      <move select="Quarter Left" hands="right" offsetX="-.5" offsetY="-.5" />
      <move select="Quarter Left" hands="right" offsetX="-.5" />
      <move select="Flip Left"/>
      <move select="Hinge Right"/>
    </path>
  </tam>

  <tamxref title="Swing the Fractions, Replace the Second Part with Trade Circulate"
           xref-link="c1/replace"
           xref-title="Swing the Fractions, Replace the Second Part with Trade Circulate"
           group=" "/>

  <tamxref title="Swing the Fractions, Replace the Third Part with a Split Circulate"
           xref-link="c1/replace"
           xref-title="Swing the Fractions, Replace the Third Part with a Split Circulate"
           group=" "/>

</tamination>
