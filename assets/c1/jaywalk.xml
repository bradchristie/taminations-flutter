  <tam title="Jaywalk"
       from="Left-Hand Quarter Lines" formation="Quarter Lines LH">
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY="2" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
    </path>
    <path>
