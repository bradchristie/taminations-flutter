  </tam>

  <tam title="Jaywalk"
       from="Quarter Lines" formation="Quarter Lines RH">
    <path>
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2" />
    </path>
    <path>
