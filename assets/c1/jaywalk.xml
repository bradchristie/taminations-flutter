      <move select="Extend Left" beats="2.5" scaleX="2.5" scaleY="2" />
      <move select="Forward" beats=".5" scaleX=".5" />
    </path>
  </tam>

  <tam title="Jaywalk"
       from="Facing Diamonds"
       formation="Diamonds Facing Girl Points" >
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
