      <move select="Extend Right" beats="2" scaleX="2" scaleY="2" />
    </path>
    <path numbers="5 4">
      <move select="Pass Thru" beats="3" scaleX="1.5" />
    </path>
  </tam>

  <tam title="Jaywalk"
       from="Left-Hand Quarter Tag"
       formation="Quarter Tag LH" >
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2" />
      <move select="Forward" />
