      <dancer gender="boy" x="0" y="1" angle="0"/>
      <dancer gender="girl" x="2" y="1" angle="0"/>
    </formation>
    <path>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-2"/>
    </path>
  </tam>

  <tam title="Peel Off" from="Left-Hand Z Facing Out" difficulty="2">
