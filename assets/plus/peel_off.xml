      <dancer gender="boy" x="0" y="1" angle="180"/>
      <dancer gender="girl" x="2" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Run Right" beats="4"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="2"  />
    </path>
  </tam>

  <tam title="Peel Off" from="Right-Hand Z Facing Out" difficulty="2">
