<tamination title="Peel Off">

  <tam title="Peel Off"
       from="Right-Hand Box"
       formation="Box RH"
       difficulty="2">
    <path>
      <move select="Forward"/>
      <move select="U-Turn Left" beats="3" offsetX="1" />
    </path>
    <path>
      <move select="Run Left" beats="4" offsetX="-2" />
    </path>
  </tam>

  <tam title="Peel Off"
       from="Left-Hand Box"
       formation="Box LH"
       difficulty="2">
    <path>
      <move select="Run Right" beats="4" offsetX="-2" />
    </path>
    <path>
      <move select="Forward"/>
      <move select="U-Turn Right" beats="3" offsetX="1" />
    </path>
  </tam>

  <tam title="Peel Off"
       from="Right-Hand Z Facing In"
       difficulty="1">
    <formation>
      <dancer gender="boy" x="0" y="-1" angle="180"/>
      <dancer gender="girl" x="2" y="-1" angle="180"/>
    </formation>
    <path>
      <move select="Run Left" beats="4"/>
    </path>
    <path>
      <move select="U-Turn Left" beats="4" offsetX="2"  />
    </path>
  </tam>

  <tam title="Peel Off"
       from="Left-Hand Z Facing In"
       difficulty="1">
