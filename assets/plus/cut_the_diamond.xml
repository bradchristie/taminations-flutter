<tamination title="Cut the Diamond">

  <tam title="Cut the Diamond"
       from="Right-Hand Diamond"
       formation="Diamond RH"
       difficulty="1">
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" beats="2"/>
      <move select="Stand" hands="none" beats="2"/>
    </path>
  </tam>

