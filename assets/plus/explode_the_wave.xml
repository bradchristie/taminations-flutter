  <!-- Theses animations for just Explode are for the sequencer  -->
  <tam title="Explode" from="Right-Hand Wave" formation="Wave RH" display="none">
    <path>
      <move select="Lead Right" beats="2"/>
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1"/>
    </path>
  </tam>

  <tam title="Explode" from="Compact Right-Hand Wave" display="none">
    <formation>
      <dancer gender="boy" x="0" y="1.5" angle="0"/>
      <dancer gender="girl" x="0" y="0.5" angle="180"/>
    </formation>
    <path>
      <move select="Lead Right" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-.5"/>
