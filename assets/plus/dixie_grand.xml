<tamination title="Dixie Grand">

  <tam title="Dixie Grand"
       from="Facing Couples"
       formation="Facing Couples" display="none">
    <path couples="1 3">
      <move select="Forward" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Lead Right" offsetX=".5" offsetY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-0.5"/>
    </path>
    <path couples="3 1">
      <move select="Forward" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Left" offsetX=".5" offsetY="-.5" />
      <move select="Lead Left" scaleX=".5" scaleY="1.5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
    </path>
  </tam>

  <tam title="Dixie Grand" from="Dixie Grand Circle"
       parts="2;2" difficulty="1">
    <formation>
      <dancer gender="boy" x="-3" y="-1" angle="90"/>
      <dancer gender="girl" x="3" y="-1" angle="90"/>
      <dancer gender="boy" x="1" y="-3" angle="180"/>
      <dancer gender="girl" x="1" y="3" angle="180"/>
    </formation>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right 1/2" beats="2" offsetX="1.5" offsetY="-1"/>
      <move select="Lead Right 1/2" beats="2" offsetX="2.1" offsetY="0"/>
      <move select="Lead Right 1/2" beats="2" offsetX=".5" offsetY="-.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Left 1/2" beats="2" offsetX="2.2" offsetY="-0.8"/>
      <move select="Lead Left 1/2" beats="2" offsetX="1.5" offsetY="1.8"/>
      <move select="Lead Left 1/2" beats="2" offsetX=".5" offsetY="-.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right 1/2" beats="2" offsetX="1.5" offsetY="-1"/>
      <move select="Lead Right 1/2" beats="2" offsetX="2.1" offsetY="0"/>
      <move select="Lead Right 1/2" beats="2" offsetX=".5" offsetY="-.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Left 1/2" beats="2" offsetX="2.2" offsetY="-0.8"/>
      <move select="Lead Left 1/2" beats="2" offsetX="1.5" offsetY="1.8"/>
      <move select="Lead Left 1/2" beats="2" offsetX=".5" offsetY="-.5"/>
    </path>
  </tam>

  <tam title="Dixie Grand"
       from="Double Pass Thru"
       formation="Double Pass Thru"
       parts="2;2" difficulty="1">
    <path couples="3 1" numbers="5 1">
      <move select="Stand" beats="2" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY="1.5" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="2" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Run Right" hands="right" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Flip Left" hands="right" />
    </path>
  </tam>

  <tam title="Dixie Grand"
       from="Quarter Tag"
       formation="Quarter Tag"
       parts="2;2" difficulty="1">
    <path couples="3 1" numbers="5 1">
      <move select="Stand" beats="2" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY="1.5" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="2" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path couples="4 2" numbers="7 3">
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Run Right" hands="right" />
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Flip Left" hands="right" />
    </path>
  </tam>

  <tam title="Dixie Grand"
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       parts="3;3" difficulty="1">
    <path>
      <move select="Flip Left" hands="right" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path numbers="6 2" couples="3 1">
      <move select="Run Right" hands="right" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY="1.5" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path couples="4 2">
      <move select="Stand" beats="3" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Flip Left" hands="right" />
    </path>
    <path couples="4 2">
      <move select="Stand" beats="3" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Run Right" hands="right" />
    </path>
  </tam>

  <tam title="Dixie Grand" from="Trade By" formation="Trade By"
       parts="3;2" difficulty="2">
    <path numbers="2 6">
      <move select="Flip Left"/>
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path numbers="5 1" couples="3 1">
      <move select="Run Right"/>
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY="1.5" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path numbers="4 8">
      <move select="Pull Left" beats="1.5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Flip Left" hands="right" />
    </path>
    <path numbers="3 7">
      <move select="Pull Left" beats="1.5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Run Right" hands="right" />
    </path>
  </tam>

  <tam title="Dixie Grand" from="3/4 Tag" formation="3/4 Tag"
       parts="3;2" difficulty="2">
    <path numbers="2 6">
      <move select="Flip Left"/>
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path numbers="5 1" couples="3 1">
      <move select="Run Right"/>
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY="1.5" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path numbers="7 3" couples="4 2">
      <move select="Extend Right" beats="3" scaleY="2" />
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Run Right" hands="right" />
    </path>
    <path numbers="4 8">
      <move select="Forward" beats="3"/>
      <move select="Pull Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Flip Left" hands="right" />
    </path>
  </tam>

  <tam title="Dixie Grand" from="Eight Chain Thru" parts="2;3"
       formation="Eight Chain Thru" difficulty="2">
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path couples="4 2">
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Flip Right"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Forward"/>
    </path>
    <path couples="3 1">
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Run Left"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" />
    </path>
  </tam>

  <tam title="Dixie Grand" from="Right-Hand Waves" parts="2;3"
       formation="Ocean Waves RH BGGB" difficulty="2">
    <path>
      <move select="Extend Right" beats="1.5" scaleY="2"/>
      <move select="Extend Right" beats="1.5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path couples="3 1">
      <move select="Forward" beats="1.5"/>
      <move select="Run Left"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" />
    </path>
    <path couples="4 2">
      <move select="Forward" beats="1.5"/>
      <move select="Extend Right" beats="1.5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY="2"/>
      <move select="Flip Right"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Forward"/>
    </path>
  </tam>

  <tam title="Dixie Grand" from="Magic Columns Right-Hand Centers" parts="2;3"
       difficulty="2">
    <formation>
      <dancer gender="boy" x="-1" y="1" angle="0"/>
      <dancer gender="girl" x="3" y="-1" angle="0"/>
      <dancer gender="boy" x="-1" y="-1" angle="180"/>
      <dancer gender="girl" x="3" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Stand" beats="2"/>
      <move select="Extend Right" beats="1.5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Stand" beats="2"/>
      <move select="Run Left"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Flip Right"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Forward"/>
