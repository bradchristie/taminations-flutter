<tamination title="Follow Your Neighbor">

  <tam title="Follow Your Neighbor"
       from="Right-Hand Box"
       formation="Box RH"
       difficulty="1">
    <path>
      <move select="Forward 2" beats="1.5" offsetY="-.25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" offsetY=".25" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" />
      <move select="Run Right" scaleY=".5" />
    </path>
  </tam>

