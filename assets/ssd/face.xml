<tamination title="Face Left / Right / In / Out">

	<tam title="Face Left" formation="Facing Couples Close" from="Facing Couples">
		<path>
			<move select="Quarter Left"/>
		</path>
	  <path>
			<move select="Quarter Left"/>
	  </path>
	</tam>

	<tam title="Face Left" formation="Couples Facing Out Close" from="Couples Facing Out">
		<path>
			<move select="Quarter Left"/>
		</path>
	  <path>
			<move select="Quarter Left"/>
	  </path>
	</tam>

  <tam title="Face Right" formation="Facing Couples Close" from="Facing Couples">
		<path>
			<move select="Quarter Right"/>
		</path>
	  <path>
			<move select="Quarter Right"/>
	  </path>
  </tam>

	<tam title="Face Right" formation="Couples Facing Out Close" from="Couples Facing Out">
		<path>
			<move select="Quarter Right"/>
		</path>
	  <path>
			<move select="Quarter Right"/>
	  </path>
	</tam>

  <tam title="Face In" formation="Facing Couples Close" from="Facing Couples">
		<path>
			<move select="Quarter Right"/>
		</path>
	  <path>
			<move select="Quarter Left"/>
	  </path>
  </tam>

	<tam title="Face In" formation="Couples Facing Out Close" from="Couples Facing Out">
		<path>
			<move select="Quarter Left"/>
		</path>
	  <path>
			<move select="Quarter Right"/>
	  </path>
	</tam>

	<tam title="Face In" formation="Completed Double Pass Thru"
       from="Completed Double Pass Thru">
    <path>
      <move select="Quarter Left" offsetY="-0.5"/>
    </path>
    <path>
      <move select="Quarter Right" offsetY="0.5"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="-0.5"/>
    </path>
    <path>
      <move select="Quarter Right" offsetY="0.5"/>
    </path>
  </tam>

  <tam title="Face In" formation="Lines Facing Out Compact"
       from="Lines Facing Out">
    <path>
      <move select="Quarter Left" offsetX="-0.5"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="-0.5"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-0.5"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-0.5"/>
    </path>
  </tam>

  <tam title="Face Out" formation="Facing Couples Close" from="Facing Couples">
		<path>
			<move select="Quarter Left"/>
		</path>
	  <path>
			<move select="Quarter Right"/>
	  </path>
  </tam>

	<tam title="Face Out" formation="Couples Facing Out Close" from="Couples Facing Out">
		<path>
			<move select="Quarter Right"/>
		</path>
	  <path>
			<move select="Quarter Left"/>
	  </path>
	</tam>

  <tam title="Face Out" formation="Completed Double Pass Thru"
       from="Completed Double Pass Thru">
    <path>
      <move select="Quarter Right" offsetY="-0.5"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="0.5"/>
    </path>
    <path>
      <move select="Quarter Right" offsetY="-0.5"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="0.5"/>
    </path>
  </tam>

  <tam title="Face Out" formation="Lines Facing Out Compact"
       from="Lines Facing Out">
    <path>
      <move select="Quarter Right" offsetX="-0.5"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-0.5"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="-0.5"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="-0.5"/>
    </path>
  </tam>

</tamination>