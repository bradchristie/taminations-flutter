<tamination title="Hourglass Circulate">

  <tam title="Hourglass Circulate"
       from="Right-Hand Hourglass"
       formation="Hourglass RH BP"
       fractions="" >
    <path couples="2 4">
      <move select="Lead Right" beats="4" scaleY="3" />
    </path>
    <path couples="2 4">
      <move select="Lead Right" beats="4" scaleX="3" />
    </path>
    <path couples="1 3">
      <move select="Extend Right" scaleX="2" scaleY="2" beats="4" />
    </path>
    <path couples="1 3">
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Hourglass Circulate"
       from="Left-Hand Hourglass"
       formation="Hourglass LH BP"
       fractions="" >
    <path>
      <move select="Extend Left" scaleX="2" scaleY="2" beats="4" />
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleX="3" />
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleY="3" />
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Hourglass Circulate"
       from="Facing Hourglass, Left-Hand Box"
       formation="Hourglass Facing LH Box">
    <path>
      <move select="Extend Left" scaleY="2" beats="3" />
      <move select="Forward"/>
    </path>
    <path>
      <move select="Forward 2" beats="2.7"/>
      <move select="Lead Right" beats="1.3"/>
    </path>
    <path>
      <move select="Quarter Left" beats="2.7" offsetY="2"/>
      <move select="Extend Right" beats="1.3"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleY="2"/>
      <move select="Forward"/>
    </path>
    <taminator>
    All dancers pass right shoulders.
    </taminator>
  </tam>

  <tam title="Hourglass Circulate"
       from="Facing Hourglass, Right-Hand Box">
    <formation>
      <dancer gender="boy" y="2" x="-3" angle="90"/>
      <dancer gender="girl" y="3" x="0" angle="180"/>
      <dancer gender="boy" y="2" x="3" angle="270"/>
      <dancer gender="girl" y="0" x="1" angle="90"/>
    </formation>
    <path couples="3 1">
      <move select="Lead Right" beats="1.5"/>
      <move select="Forward 2" beats="2.5" />
    </path>
    <path couples="3 1">
      <move select="Extend Left" beats="1.5"/>
      <move select="Quarter Left" beats="2.5" offsetX="2"/>
    </path>
    <path>
      <move select="Forward" beats="1.3" />
      <move select="Extend Right" beats="2.7" scaleY="2"/>
    </path>
    <path>
      <move select="Forward" beats="1.3" />
      <move select="Extend Right" beats="2.7" scaleY="2"/>
    </path>
  </tam>

  <tam title="Cut the Hourglass"
       from="Right-Hand Hourglass"
       formation="Hourglass RH GP">
    <path couples="2 4">
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path couples="1 3">
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path couples="1 3">
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path couples="4 2">
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Cut the Hourglass"
       from="Left-Hand Hourglass"
       formation="Hourglass LH BP">
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Cut the Hourglass"
       from="Facing Hourglass with Right-Hand Diamond"
       formation="Hourglass Facing LH Box">
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Cut the Hourglass"
       from="Facing Hourglass with Left-Hand Diamond"
       formation="Hourglass Facing RH Box">
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Cut the Hourglass" from="Hourglass Box Facing Out">
    <formation>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
      <dancer gender="girl" x="-3" y="0" angle="90"/>
      <dancer gender="boy" x="-2" y="3" angle="180"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Dodge Right" />
      <move select="Run Right" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Cut the Hourglass" from="Hourglass Box Facing In">
    <formation>
      <dancer gender="boy" x="-2" y="-3" angle="0"/>
      <dancer gender="girl" x="-3" y="0" angle="90"/>
      <dancer gender="boy" x="-2" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Dodge Left" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Run Right" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Cut the Hourglass" from="Hourglass Box 2 Facing Out" display="none">
    <formation>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
      <dancer gender="girl" x="-3" y="0" angle="270"/>
      <dancer gender="boy" x="-2" y="3" angle="180"/>
      <dancer gender="girl" x="0" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Dodge Right" />
      <move select="Run Right" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Cut the Hourglass" from="Hourglass Box 2 Facing In" display="none">
    <formation>
      <dancer gender="boy" x="-2" y="-3" angle="0"/>
      <dancer gender="girl" x="-3" y="0" angle="270"/>
      <dancer gender="boy" x="-2" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Dodge Left" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Run Right" />
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Flip the Hourglass"
       from="Right-Hand Hourglass"
       formation="Hourglass RH BP">
    <path numbers="3 6">
      <move select="Flip Right" />
    </path>
    <path numbers="1 8">
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path numbers="2 7">
      <move select="Flip Right" />
    </path>
    <path numbers="4 5">
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Flip the Hourglass" from="Left-Hand Hourglass"
       formation="Hourglass LH BP">
    <path numbers="3 6">
      <move select="Flip Left"/>
    </path>
    <path numbers="1 8">
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path numbers="2 7" couples="4 2">
      <move select="Flip Left"/>
    </path>
    <path numbers="4 5" couples="4 2">
      <move select="Extend Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Flip the Hourglass"
       from="Facing Hourglass with Right-Hand Diamond"
       formation="Hourglass Facing LH Box">
    <path>
      <move select="Flip Left" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Flip Left" beats="4"/>
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Flip the Hourglass"
       from="Facing Hourglass with Left-Hand Diamond"
       formation="Hourglass Facing RH Box">
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>


  <tam title="Flip the Hourglass"
       from="Hourglass Box Facing Out"
       formation="Hourglass Facing RH Box">
    <formation>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
      <dancer gender="girl" x="-3" y="0" angle="90"/>
      <dancer gender="boy" x="-2" y="3" angle="180"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Flip Right" beats="4" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" beats="2" />
    </path>
    <path>
      <move select="Flip Left" beats="4"/>
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Flip the Hourglass" from="Hourglass Box Facing In">
    <formation>
      <dancer gender="boy" x="-2" y="-3" angle="0"/>
      <dancer gender="girl" x="-3" y="0" angle="90"/>
      <dancer gender="boy" x="-2" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Flip Left" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Flip the Hourglass" from="Hourglass Box 2 Facing Out" display="none">
    <formation>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
      <dancer gender="girl" x="-3" y="0" angle="270"/>
      <dancer gender="boy" x="-2" y="3" angle="180"/>
      <dancer gender="girl" x="0" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Flip Left" beats="4"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Flip the Hourglass" from="Hourglass Box 2 Facing In" display="none">
    <formation>
      <dancer gender="boy" x="-2" y="-3" angle="0"/>
      <dancer gender="girl" x="-3" y="0" angle="270"/>
      <dancer gender="boy" x="-2" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Flip Left" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Flip the Hourglass and Roll"
       group=" "
       formation="Hourglass RH BP">
    <path>
      <move select="Flip Right" />
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Flip Right" />
      <move select="Quarter Right" offsetX="-1"/>
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleY="2" />
    </path>
    <taminator>
      Note that the very centers do not Roll
    </taminator>
  </tam>

</tamination>
