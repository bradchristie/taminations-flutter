<tamination title="Ocean Wave Family">

  <tam title="Step to a Wave" from="Facing Dancers" difficulty="2">
    <formation>
      <dancer gender="boy" x="1.5" y="0" angle="180"/>
    </formation>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5"/>
    </path>
  </tam>

  <tam title="Step to a Wave"
       from="Facing Couples"
       formation="Facing Couples Compact"
       difficulty="1">
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY="2" />
    </path>
    <path>
      <move select="Forward 2" scaleX="0.75"/>
    </path>
  </tam>

  <tam title="Step to a Wave"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       difficulty="1">
    <path>
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
  </tam>

  <tam title="Step to a Wave"
       from="Facing Lines"
       formation="Normal Lines"
       difficulty="2">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Step to a Left-Hand Wave" from="Facing Dancers" difficulty="2">
    <formation>
      <dancer gender="boy" x="1.5" y="0" angle="180"/>
    </formation>
    <path>
      <move select="Extend Right" beats="2" scaleX="1.5"/>
    </path>
  </tam>

  <tam title="Step to a Left-Hand Wave"
       from="Facing Couples"
       formation="Facing Couples Compact"
       difficulty="2">
    <path>
      <move select="Forward 2" scaleX="0.75"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="1.5" scaleY="2" />
    </path>
  </tam>

  <tam title="Step to a Left-Hand Wave"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="" difficulty="2">
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Step to a Left-Hand Wave"
       from="Facing Lines"
       formation="Normal Lines"
       difficulty="2">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Balance" from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB" difficulty="1">
    <path>
      <move select="Forward" beats="2" hands="gripright" scaleX=".35"/>
      <move select="Back" beats="2" hands="gripright" scaleX=".35"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="gripboth" scaleX=".35"/>
      <move select="Back" beats="2" hands="gripboth" scaleX=".35"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="gripboth" scaleX=".35"/>
      <move select="Back" beats="2" hands="gripboth" scaleX=".35"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="gripright" scaleX=".35"/>
      <move select="Back" beats="2" hands="gripright" scaleX=".35"/>
    </path>
  </tam>

  <tam title="Balance" from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB" difficulty="1">
    <path>
      <move select="Forward" beats="2" hands="gripleft" scaleX=".35"/>
      <move select="Back" beats="2" hands="gripleft" scaleX=".35"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="gripboth" scaleX=".35"/>
      <move select="Back" beats="2" hands="gripboth" scaleX=".35"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="gripboth" scaleX=".35"/>
      <move select="Back" beats="2" hands="gripboth" scaleX=".35"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="gripleft" scaleX=".35"/>
      <move select="Back" beats="2" hands="gripleft" scaleX=".35"/>
    </path>
  </tam>

  <tam title="Balance" from="Alamo Ring"
       formation="Alamo Wave" difficulty="1">
    <path>
      <move select="Forward" beats="2" hands="gripboth" scaleX=".35"/>
      <move select="Back" beats="2" hands="gripboth" scaleX=".35"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="gripboth" scaleX=".35"/>
      <move select="Back" beats="2" hands="gripboth" scaleX=".35"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="gripboth" scaleX=".35"/>
      <move select="Back" beats="2" hands="gripboth" scaleX=".35"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="gripboth" scaleX=".35"/>
      <move select="Back" beats="2" hands="gripboth" scaleX=".35"/>
    </path>
  </tam>

  <tam title="Heads Step to a Wave" group=" "
       formation="Static Square"
       difficulty="2">
    <path>
      <move select="Extend Left" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Forward 3" offsetY=".25" />
    </path>
    <path/>
    <path/>
  </tam>

  <tam title="Sides Step to a Wave" group=" "
       formation="Static Square" display="none"
       difficulty="2">
    <path/>
    <path/>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Forward 3" offsetY=".25" />
    </path>
  </tam>

  <tam title="Heads Step to a Left-Hand Wave" group=" "
       formation="Static Square"
       difficulty="2">
    <path>
      <move select="Forward 3" offsetY="-.25" />
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3" />
    </path>
    <path/>
    <path/>
  </tam>

  <tam title="Sides Step to a Left-Hand Wave" group=" "
       formation="Static Square" display="none"
       difficulty="2">
    <path/>
    <path/>
    <path>
      <move select="Forward 3" offsetY="-.25" />
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3" />
    </path>
  </tam>

  <tamxref title="Allemande Left to an Alamo Ring" group=" "
           xref-link="b2/alamo_style"
           xref-title="Allemande Left to an Alamo Ring"/>

  <tam title="Touch"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       display="no">
    <path>
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
  </tam>

</tamination>
