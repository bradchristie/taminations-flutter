<tamination title="Scoot Back">

  <tam title="Scoot Back"
       from="Right-Hand Box"
       formation="Box RH"
       fractions="3" difficulty="1">
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".25" beats="1.5"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" scaleX="2" scaleY=".25" beats="1.5"/>
    </path>
    <path>
      <move select="Run Right" beats="6" />
    </path>
  </tam>

  <tam title="Scoot Back"
       from="Left-Hand Box"
       formation="Box LH"
       fractions="3" difficulty="2">
    <path>
      <move select="Flip Left" beats="6" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".25" beats="1.5"/>
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" scaleX="2" scaleY=".25" beats="1.5"/>
    </path>
  </tam>

  <tam title="Scoot Back" from="Single Quarter Tag"
       formation="Single Quarter Tag" difficulty="2">
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".75"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".75"/>
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="1.5" offsetY="-.25"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" offsetY=".25"/>
    </path>
  </tam>

  <tam title="Scoot Back" from="Left-Hand Single Quarter Tag"
       formation="Single Left Quarter Tag" difficulty="3">
    <path>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".75"/>
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".75"/>
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="1.5" offsetY=".25"/>
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" offsetY="-.25"/>
    </path>
  </tam>

  <tam title="Scoot Back" display="none">
    <formation>
      <dancer gender="boy" x="-1.0" y="1" angle="0" />
      <dancer gender="girl" x="-1.0" y="-1" angle="270" />
    </formation>
    <path>
      <move select="Extend Right" scaleY=".25" beats="1.5"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" scaleY=".25" beats="1.5"/>
    </path>
    <path>
      <move select="Run Left" beats="6" />
    </path>
  </tam>

  <tam title="Scoot Back" display="none">
    <formation>
      <dancer gender="boy" x="-1.0" y="-1" angle="0" />
      <dancer gender="girl" x="-1.0" y="1" angle="90" />
    </formation>
    <path>
      <move select="Extend Left" scaleY=".25" beats="1.5"/>
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" scaleY=".25" beats="1.5"/>
    </path>
    <path>
      <move select="Run Right" beats="6" />
    </path>
  </tam>

  <tam title="Scoot Back"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG"
       fractions="3" difficulty="1">
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".25" beats="1.5"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" scaleX="2" scaleY=".25" beats="1.5"/>
    </path>
    <path>
      <move select="Flip Right" beats="6" />
    </path>
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".25" beats="1.5"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" scaleX="2" scaleY=".25" beats="1.5"/>
    </path>
    <path>
      <move select="Flip Right" beats="6" />
    </path>
  </tam>

  <tam title="Scoot Back"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG"
       fractions="3" difficulty="2">
    <path>
      <move select="Flip Left" beats="6" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Flip Left" beats="6" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
  </tam>

  <tam title="Scoot Back"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       fractions="3" difficulty="2">
    <path>
      <move select="Run Right" beats="6" scaleX=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Scoot Back"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       fractions="3" difficulty="2">
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX=".5" />
    </path>
  </tam>

  <tam title="Scoot Back" display="none"
       from="T-Bones URUR" formation="T-Bone URUR">
    <path>
      <move select="Extend Right" scaleY=".25" beats="1.5"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" scaleY=".25" beats="1.5"/>
    </path>
    <path>
      <move select="Run Left" scaleX="0.5" beats="6" />
    </path>
    <path>
      <move select="Extend Right" scaleY=".25" beats="1.5"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" scaleY=".25" beats="1.5"/>
    </path>
    <path>
      <move select="Run Left" beats="6" />
    </path>
  </tam>

  <tam title="Scoot Back" display="none"
       from="T-Bones LULU" formation="T-Bone LULU">
    <path>
      <move select="Run Right" beats="6" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleY=".25" />
    </path>
    <path>
      <move select="Run Right" scaleX="0.5" beats="6" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleY=".25" />
    </path>
  </tam>

  <tam title="Scoot Back" display="none"
       from="T-Bones DLDL" formation="T-Bone DLDL">
    <path>
      <move select="Run Left" beats="6" scaleX=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Scoot Back" display="none"
       from="T-Bones RDRD" formation="T-Bone RDRD">
    <path>
      <move select="Run Right" beats="6" scaleX=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Scoot Back"
       from="Quarter Tag"
       formation="Quarter Tag"
       fractions="3" difficulty="2">
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Scoot Back"
       from="Left-Hand Quarter Tag"
       formation="Quarter Tag LH"
       fractions="3" difficulty="3">
    <path>
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5" />
    </path>
  </tam>

</tamination>
