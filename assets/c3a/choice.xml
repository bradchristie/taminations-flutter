<tamination title="&lt;anything&gt; Choice">

  <tam title="Choice" from="Tidal Wave" formation="Tidal Wave RH BGGB" parts="3">
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="1.5" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="U-Turn Right" beats="2" offsetX="1.5" offsetY="-.5"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="1.5"/>
      <move select="Hinge Right" beats="2" offsetY="1"/>
    </path>
    <path>
      <move select="Hinge Left" beats="3" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" beats="2"/>
    </path>
  </tam>

  <tam title="Lockers Choice" from="Right-Hand Waves"
       formation="Ocean Waves RH GBGB" parts="4;4">
    <path couples="4 2">
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="3"/>
      <move select="Hinge Left" beats="4" scaleY=".5"/>
      <move select="Hinge Right" beats="3"/>
    </path>
    <path couples="4 2">
      <move select="Hinge Left" beats="4" scaleX=".5"/>
      <move select="Swing Right" beats="4" scaleX=".5" scaleY=".5"/>
      <move select="Flip Right" offsetX="2" scaleY=".25"/>
    </path>
    <path couples="3 1">
      <move select="Hinge Left" beats="4" scaleX=".5"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="1.5"/>
      <move select="Hinge Right" beats="3"/>
    </path>
    <path couples="3 1">
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="3"/>
      <move select="Swing Right" beats="4" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Lockers Choice" from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB" parts="4;4">
    <path>
      <move select="Lead Left" beats="4" scaleX="1.5" scaleY="3"/>
      <move select="Swing Left" beats="4" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="4" scaleX=".5"/>
      <move select="Lead Left" beats="4" scaleX="3" scaleY="1.5"/>
      <move select="Hinge Left" beats="3"/>
    </path>
    <path>
      <move select="Hinge Right" beats="4" scaleX=".5"/>
      <move select="Swing Left" beats="4" scaleX=".5" scaleY=".5"/>
      <move select="Flip Left" offsetX="2" scaleY=".25"/>
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleX="1.5" scaleY="3"/>
      <move select="Hinge Right" beats="4" scaleY=".5"/>
      <move select="Hinge Left" beats="3"/>
    </path>
  </tam>

  <tam title="Cut the Diamonder's Choice" group=" " parts="5">
    <formation>
      <dancer gender="boy" x="-1" y="-2.5" angle="90"/>
      <dancer gender="girl" x="0" y="-.5" angle="180"/>
      <dancer gender="boy" x="1" y="-2.5" angle="270"/>
      <dancer gender="girl" x="0" y="-4.5" angle="0"/>
    </formation>
    <path numbers="2 7">
      <move select="Lead Right" beats="2" scaleX="2"/>
      <move select="Stand" hands="left" beats="3"/>
      <move select="Hinge Left" beats="3" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" beats="2"/>
    </path>
    <path numbers="5 4">
      <move select="Dodge Left" beats="2" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="U-Turn Right" beats="2" offsetX="1.5" offsetY="-.5"/>
    </path>
    <path numbers="8 1">
      <move select="Lead Right" beats="2"/>
      <move select="Stand" hands="none" beats="3"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="1.5" scaleY=".5"/>
    </path>
    <path numbers="6 3">
      <move select="Dodge Left" beats="2"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="1.5"/>
      <move select="Hinge Right" beats="2" offsetY="1"/>
    </path>
  </tam>

</tamination>
