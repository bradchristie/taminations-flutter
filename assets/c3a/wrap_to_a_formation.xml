<tamination title="Wrap To a Formation">

  <tam title="Wrap to Diamonds" from="Right-Hand Columns" formation="Column RH GBGB">
    <path>
      <move select="Lead Right"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2"/>
      <move select="Lead Right" beats="2" scaleX="1" scaleY="3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" beats="4" offsetX="-1" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Lead Right" beats="3"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Wrap to Diamonds" from="Left-Hand Columns" formation="Column LH GBGB">
    <path>
      <move select="Forward 3"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Lead Left" beats="3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Left" beats="4" offsetX="-1" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="2"/>
      <move select="Lead Left" beats="2" scaleX="1" scaleY="3"/>
    </path>
  </tam>

  <tam title="Wrap to a Galaxy" from="Right-Hand Columns">
    <formation>
      <dancer gender="boy" y="3" x="-1" angle="90"/>
      <dancer gender="girl" y="3" x="1" angle="270"/>
      <dancer gender="boy" y="1" x="1" angle="270"/>
      <dancer gender="girl" y="1" x="-1" angle="90"/>
    </formation>
    <path numbers="1 8">
      <move select="Lead Right"/>
      <move select="Lead Right" beats="3" scaleX="1" scaleY="3"/>
      <move select="Extend Left" beats="2" scaleX="1" scaleY="2.1"/>
    </path>
    <path numbers="5 4">
      <move select="Forward 4"/>
    </path>
    <path numbers="6 3">
      <move select="Forward 3"/>
      <move select="Lead Right" beats="2"/>
    </path>
    <path numbers="2 7">
      <move select="Forward 2"/>
      <move select="Run Right" beats="4" offsetX="-2" />
    </path>
  </tam>

  <tam title="Wrap to a Galaxy" from="Left-Hand Columns" formation="Column LH GBGB">
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Lead Left" beats="2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Left" beats="4" offsetX="-2"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Lead Left" beats="3" scaleX="1" scaleY="3"/>
      <move select="Extend Right" beats="2" scaleX="1" scaleY="2.1"/>
    </path>
  </tam>

  <tam title="Wrap to an Hourglass" from="Right-Hand Columns" formation="Column RH GBGB">
    <path couples="3 1">
      <move select="Lead Right"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path couples="4 2">
      <move select="Forward 2"/>
      <move select="Run Right" beats="4" offsetX="-1" scaleY="2"/>
    </path>
    <path couples="2 4">
      <move select="Forward 3"/>
      <move select="Lead Right" beats="3"/>
    </path>
    <path couples="1 3">
      <move select="Forward 3"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Wrap to an Hourglass" from="Left-Hand Columns" formation="Column LH GBGB">
    <path>
      <move select="Forward 3"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Lead Left" beats="3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Left" beats="4" offsetX="-1" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="2"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Wrap to Interlocked Diamonds" from="Right-Hand Columns" formation="Column RH GBGB">
    <path couples="3 1">
      <move select="Lead Right"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3"/>
    </path>
    <path couples="4 2">
      <move select="Forward 2"/>
      <move select="Run Right" beats="4" offsetX="-1" scaleY="2"/>
    </path>
    <path couples="2 4">
      <move select="Forward 3"/>
      <move select="Lead Right" beats="3"/>
    </path>
    <path couples="1 3">
      <move select="Forward 3"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Wrap to Interlocked Diamonds" from="Left-Hand Columns" formation="Column LH GBGB">
    <path>
      <move select="Forward 3"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Lead Left" beats="3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Left" beats="4" offsetX="-1" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="2"/>
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3"/>
    </path>
  </tam>


</tamination>
