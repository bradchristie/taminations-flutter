<tamination title="Allemande Left">

  <tam title="Allemande Left" from="Facing Couples" formation="Facing Couples Compact"
       sequencer="gender-specific">
    <path>
      <move select="Forward" scaleX="1.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Left" beats="2" offsetX="1.5" offsetY=".5"/>
    </path>
    <path>
      <move select="Extend Right" scaleX="1.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Right" beats="2" offsetX="1.5" offsetY=".5"/>
    </path>
  </tam>

  <tam title="Allemande Left" from="Eight Chain Thru"
       sequencer="gender-specific">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
      <dancer gender="boy" x="-1" y="-1" angle="180"/>
      <dancer gender="girl" x="1" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Forward"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Left" beats="2" offsetX="1.5" offsetY=".5"/>
    </path>
    <path>
      <move select="Extend Right"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Right" beats="2" offsetX="1.5" offsetY=".5"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="2" scaleY=".5"/>
    </path>
    <path couples="4 2">
      <move select="Extend Right"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Allemande Left" from="after Dixie Grand"
       sequencer="gender-specific" display="none">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
      <dancer gender="boy" x="-1" y="-2" angle="180"/>
      <dancer gender="girl" x="1" y="-2" angle="0"/>
    </formation>
    <path>
      <move select="Forward"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Left" beats="2" offsetX="1.5" offsetY=".5"/>
    </path>
    <path>
      <move select="Extend Right"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Right" beats="2" offsetX="1.5" offsetY=".5"/>
    </path>
    <path>
      <move select="Extend Right"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="2" scaleY=".5"/>
    </path>
    <path couples="4 2">
      <move select="Forward"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Allemande Left" sequencer="gender-specific" from="Trade By">
    <formation>
      <dancer gender="boy" x="-3" y="-1" angle="180"/>
      <dancer gender="girl" x="-1" y="-1" angle="0"/>
      <dancer gender="boy" x="1" y="-1" angle="180"/>
      <dancer gender="girl" x="3" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Quarter Right" offsetY="-1"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Left" beats="1.5" offsetX="1.1" offsetY="1"/>
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" beats="1.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5"/>
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" beats="1.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Forward" beats="1.5"/>
    </path>
    <path>
      <move select="Lead Left" beats="1.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Right" beats="1.5" offsetX="1.1"/>
    </path>
  </tam>

  <tam title="Allemande Left" sequencer="gender-specific"
       from="Normal Lines"
       formation="Normal Lines">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Left" beats="1.5" offsetX="1.1" offsetY=".5" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="-.5" offsetY="-1"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Right" beats="1.5" offsetX="1.1" offsetY=".5"/>
    </path>
  </tam>

  <tam title="Allemande Left" from="Lines Facing Out"
       sequencer="gender-specific">
    <formation>
      <dancer gender="boy" x="-2" y="1" angle="180"/>
      <dancer gender="girl" x="-2" y="-1" angle="180"/>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
      <dancer gender="girl" x="2" y="-3" angle="0"/>
    </formation>
    <path>
      <move select="Quarter Right" beats="1" offsetX="-.5" offsetY="-1"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="1" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Quarter Right" beats="1" offsetX="-.5" offsetY="-1"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Left" beats="1.5" offsetX="1" offsetY="1.5"/>
    </path>
    <path>
      <move select="Lead Left" beats="1" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Right" beats="1.5" offsetX="1" offsetY="-.5"/>
    </path>
  </tam>

  <tam title="Allemande Left" sequencer="gender-specific"
       from="Left-Hand Waves">
    <formation>
      <dancer gender="boy" x="-2" y="1" angle="0"/>
      <dancer gender="girl" x="-2" y="-3" angle="0"/>
      <dancer gender="boy" x="-2" y="-1" angle="180"/>
      <dancer gender="girl" x="2" y="-3" angle="0"/>
    </formation>
    <path>
      <move select="Hinge Left" scaleX=".75"/>
      <move select="Hinge Left" scaleX=".75" scaleY=".75"/>
      <move select="Eighth Left" beats="1.5" offsetX="1" offsetY="1.75"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX=".75"/>
      <move select="Hinge Left" scaleX=".75" scaleY=".75"/>
      <move select="Eighth Right" beats="1.5" offsetX="1" offsetY="-.25"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX=".75"/>
      <move select="Hinge Left" scaleX=".75" scaleY=".75"/>
      <move select="Extend Left" beats="1.5" scaleY=".75"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX=".75"/>
      <move select="Hinge Left" scaleX=".75" scaleY=".75"/>
      <move select="Extend Left" beats="1.5" scaleY=".75"/>
    </path>
  </tam>

  <tam title="Allemande Left" sequencer="gender-specific"
       from="Static Square"
       formation="Static Square" >
    <path>
      <move select="Lead Left" beats="3" offsetX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" offsetY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="1.5" offsetX="-.5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="2" offsetY=".5" />
    </path>
    <path>
      <move select="Lead Left" beats="3" offsetX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" offsetY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="1.5" offsetX="-.5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="2" offsetY=".5" />
    </path>
  </tam>

  <tam title="Allemande Left" from="Circle Left" sequencer="gender-specific">
    <formation>
      <dancer gender="boy" x="-2.45" y="1" angle="0"/>
      <dancer gender="girl" x="-2.45" y="-1" angle="45"/>
      <dancer gender="boy" x="-1" y="-2.45" angle="90"/>
      <dancer gender="girl" x="1" y="-2.45" angle="135"/>
    </formation>
    <path>
      <move select="Eighth Left" beats="1.5" offsetX="1.1" offsetY=".4"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Lead Left 1/2" beats="2.25" offsetX=".75" offsetY="-.2"/>
    </path>
    <path>
      <move select="Quarter Right"  offsetY="-1" offsetX="-.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Lead Left 1/2"/>
      <move select="Quarter Right" offsetX=".9" offsetY="-.1"/>
    </path>
    <path>
      <move select="Eighth Left" beats="1.5" offsetX="1.1" offsetY=".4"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Lead Left 1/2" beats="2.25" offsetX=".75" offsetY="-.2"/>
    </path>
    <path>
      <move select="Quarter Right"  offsetY="-1" offsetX="-.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Lead Left 1/2"/>
      <move select="Quarter Right" offsetX=".9" offsetY="-.1"/>
    </path>
  </tam>

  <tam title="Allemande Left" from="Thar" sequencer="gender-specific">
    <formation>
      <dancer gender="boy" x="-1" y="0" angle="90"/>
      <dancer gender="girl" x="0" y="-3" angle="0"/>
      <dancer gender="boy" x="0" y="-1" angle="180"/>
      <dancer gender="girl" x="3" y="0" angle="90"/>
    </formation>
    <path>
      <move select="Swing Left"/>
      <move select="Forward" beats="2"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Extend Left" beats="2" scaleY="2"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Forward" beats="2"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Extend Left" beats="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Allemande Left" from="Grand Circle" sequencer="gender-specific" display="none">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="270"/>
      <dancer gender="girl" x="1" y="1.5" angle="180"/>
      <dancer gender="boy" x="-1" y="1.5" angle="0"/>
      <dancer gender="girl" x="-3" y="1" angle="270"/>
    </formation>
    <path>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Lead Left 1/2"/>
    </path>
    <path>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Lead Right 1/2" offsetX="1.1" offsetY="1.5"/>
    </path>
    <path>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Lead Left 1/2" offsetX=".2" offsetY="-.6"/>
    </path>
    <path>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Lead Right 1/2" offsetX=".2"/>
    </path>
  </tam>

</tamination>
