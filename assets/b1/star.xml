<tamination title="Star Family">

  <tam title="Right Hand Star"
       from="Facing Couples"
       formation="Facing Couples">
    <path>
      <move select="Forward" beats="1.5" scaleX="2" />
      <move select="Swing Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Lead Left" beats="1.5" />
      <move select="Swing Right" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Right Hand Star"
       from="Eight Chain Thru"
       formation="Eight Chain Thru">
    <path>
      <move select="Forward" beats="1.5" />
      <move select="Swing Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Quarter Left" beats="1.5" offsetY="1" />
      <move select="Swing Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Forward" beats="1.5" />
      <move select="Swing Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Quarter Left" beats="1.5" offsetY="1" />
      <move select="Swing Right" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Left Hand Star"
       from="Facing Couples"
       formation="Facing Couples">
    <path>
      <move select="Lead Right" beats="1.5" />
      <move select="Swing Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="2" />
      <move select="Swing Left" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Left Hand Star"
       from="Eight Chain Thru"
       formation="Eight Chain Thru">
    <path>
      <move select="Quarter Right" beats="1.5" offsetY="-1" />
      <move select="Swing Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Forward" beats="1.5" />
      <move select="Swing Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Quarter Right" beats="1.5" offsetY="-1" />
      <move select="Swing Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Forward" beats="1.5" />
      <move select="Swing Left" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Turn the Star" from="Right-Hand Star" formation="Star RH">
    <path>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Hinge Right"/>
    </path>
  </tam>

  <tam title="Turn the Star" from="Left-Hand Star" formation="Star LH">
    <path>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Hinge Left"/>
    </path>
  </tam>

  <tam title="Turn the Stars" from="Right-Hand Stars" formation="Stars RH">
    <path>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Hinge Right"/>
    </path>
  </tam>

  <tam title="Turn the Stars" from="Left-Hand Stars" formation="Stars LH">
    <path>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Hinge Left"/>
    </path>
  </tam>

</tamination>
