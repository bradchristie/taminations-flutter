      <dancer gender="boy" x="-3" y="0" angle="90"/>
      <dancer gender="girl" x="-1" y="0" angle="270"/>
    </formation>
    <path numbers="1 4">
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3" />
    </path>
    <path numbers="2 3">
      <move select="Hinge Left" beats="4" />
    </path>
  </tam>

