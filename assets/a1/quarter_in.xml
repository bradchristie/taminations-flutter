<tamination title="Quarter In">

  <tam title="Quarter In"
       from="Facing Couples"
       formation="Facing Couples">
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" offsetY="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1" />
    </path>
  </tam>

  <tam title="Quarter In"
       from="Two-Faced Line"
       formation="Two-Faced Line RH">
    <path>
      <move select="Quarter Right" beats="2" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" />
    </path>
  </tam>

  <tam title="Quarter In"
       from="Diamond"
       formation="Diamond RH">
    <path>
      <move select="Quarter Right" beats="2" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" />
    </path>
  </tam>

  <tam title="Quarter In"
       from="Eight Chain Thru"
       formation="Eight Chain Thru">
    <path>
      <move select="Quarter Right" beats="2" offsetY="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetY="-1" />
    </path>
  </tam>

  <tam title="Quarter In"
       from="Lines"
       formation="Normal Lines">
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Quarter In" from="Lines Facing Out" formation="Lines Facing Out">
    <path numbers="1 8">
      <move select="Quarter Left" beats="2" offsetX="-1" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
    <path numbers="3 6">
      <move select="Quarter Left" beats="2" offsetX="-1" />
    </path>
    <path numbers="4 5">
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
  </tam>

  <tam title="Quarter In"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
  </tam>

  <tam title="Quarter In"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB">
    <path>
      <move select="Quarter Left" beats="2" offsetX="-1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="-1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Quarter In" from="T-Bones" formation="T-Bone LDDR">
    <path numbers="1 8">
      <move select="Quarter Right" beats="2" />
    </path>
    <path numbers="5 4">
      <move select="Quarter Left" beats="2" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Right" beats="2" />
    </path>
    <path numbers="3 6">
      <move select="Quarter Left" beats="2" />
    </path>
  </tam>

  <tam title="Quarter In" from="Diamonds" formation="Diamonds RH Girl Points">
    <path numbers="6 3">
      <move select="Quarter Right" beats="2" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Right" beats="2" />
    </path>
    <path numbers="5 4">
      <move select="Quarter Right" beats="2" />
    </path>
    <path numbers="8 1">
      <move select="Quarter Right" beats="2" />
    </path>
  </tam>

  <tam title="Quarter In" from="Tidal Wave">
     <formation>
      <dancer gender="boy" x="0" y="5.25" angle="0"/>
      <dancer gender="girl" x="0" y="3.75" angle="180"/>
      <dancer gender="girl" x="0" y="2.25" angle="0"/>
      <dancer gender="boy" x="0" y=".75" angle="180"/>
    </formation>
    <path numbers="1 8">
      <move select="Quarter Right" beats="2" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Right" beats="2" />
    </path>
    <path numbers="3 6">
      <move select="Quarter Right" beats="2" />
    </path>
    <path numbers="4 5">
      <move select="Quarter Right" beats="2" />
    </path>
  </tam>

  <tam title="Heads Quarter In" group=" " formation="Static Square">
    <path>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Quarter Left"/>
    </path>
    <path/>
    <path/>
  </tam>

  <tam title="Sides Quarter In" group=" " formation="Static Square">
    <path/>
    <path/>
    <path>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Quarter Left"/>
    </path>
  </tam>

  <tamxref title="All 4 Couples Quarter In" group=" "
           xref-link="a2/all_4_all_8"
           xref-title="All 4 Couples (A-1) Quarter In"/>

  <tam title="As Couples Quarter In"
       from="Lines"
       formation="Normal Lines"
       group=" " >
    <path>
      <move select="Hinge Right" beats="3" />
    </path>
    <path>
      <move select="BackHinge Left" beats="3" />
    </path>
    <path>
      <move select="BackHinge Right" beats="3" />
    </path>
    <path>
      <move select="Hinge Left" beats="3" />
    </path>
  </tam>

</tamination>
