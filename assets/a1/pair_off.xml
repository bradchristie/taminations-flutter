<tamination title="Pair Off">




  <tam title="Pair Off"
       from="Facing Couples"
       formation="Facing Couples Compact">
    <path>
      <move select="Lead Left" beats="2" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Pair Off"
       from="Lines"
       formation="Normal Lines">
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Pair Off"
       from="Eight Chain Thru">
    <formation>
      <dancer gender="boy" y="3" x="1" angle="270" />
      <dancer gender="girl" y="3" x="-1" angle="270" />
      <dancer gender="boy" y="1" x="-1" angle="90" />
      <dancer gender="girl" y="1" x="1" angle="90" />
    </formation>
    <path couples="4 2">
      <move select="Quarter Left" beats="2" offsetY="1" />
    </path>
    <path couples="4 2">
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
    <path couples="1 3">
      <move select="Quarter Left" beats="2" offsetY="1" />
    </path>
    <path couples="1 3">
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
  </tam>

  <tam title="Heads Pair Off" formation="Static Square" group=" ">
    <path>
      <move select="Forward" beats="1.5"/>
      <move select="Quarter Left" beats="2.5" offsetX="1" />
    </path>
    <path>
      <move select="Forward" beats="1.5"/>
      <move select="Quarter Right" beats="2.5" offsetX="1" />
    </path>
    <path/>
    <path/>
  </tam>

  <tam title="Sides Pair Off" formation="Static Square" group=" ">
    <path/>
    <path/>
    <path>
      <move select="Forward" beats="1.5"/>
      <move select="Quarter Left" beats="2.5" offsetX="1" />
    </path>
    <path>
      <move select="Forward" beats="1.5"/>
      <move select="Quarter Right" beats="2.5" offsetX="1" />
    </path>
  </tam>

  <tam title="As Couples Pair Off"
       from="Lines"
       formation="Normal Lines"
       group=" " >
    <path>
      <move select="BackHinge Right" />
    </path>
    <path>
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="BackHinge Left" />
    </path>
  </tam>

  <tamxref title="All 4 Couples Pair Off" group=" "
           xref-link="a2/all_4_all_8"
           xref-title="All 4 Couples (A-1) Pair Off"/>

</tamination>
